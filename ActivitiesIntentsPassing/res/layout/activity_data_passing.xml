<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activitiesintentspassing.DataPassing" >

    <TextView
        android:id="@+id/txtViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_header" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtViewHeader"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/slothstronaut"
        android:src="@drawable/sloth" />

    <TextView
        android:id="@+id/txtViewUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewHeader"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:text="@string/no_username"
        android:textSize="12sp" />

    <Button
        android:id="@+id/bttnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="@string/settings_button" />

</RelativeLayout>
