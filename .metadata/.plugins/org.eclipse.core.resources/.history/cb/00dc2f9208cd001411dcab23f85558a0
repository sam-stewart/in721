package bit.stewasc3.complexcontrols;

import android.app.Activity;
import android.app.AlertDialog;
import android.app.Dialog;
import android.app.DialogFragment;
import android.content.DialogInterface;
import android.os.Bundle;
import android.util.Log;
import android.widget.Button;

public class DialogueFragment extends DialogFragment
{
	public interface NoticeDialogListener
	{
		public void onDialogClick(boolean confirm);
	}
	
	NoticeDialogListener mCallback;
	Button mButtonYes;
	Button mButtonNo;
	String instrument;
	public static String EXTRA_INSTRUMENT = "bit.stewasc3.complexcontrols.instrument";
	
	public DialogueFragment() {}
	
	public static DialogueFragment newInstance(String instrument)
	{
		DialogueFragment frag = new DialogueFragment();
		Bundle args = new Bundle();
		args.putString(DialogueFragment.EXTRA_INSTRUMENT, instrument);
		frag.setArguments(args);
		return frag;
	}
	
	public void onAttach(Activity activity)
	{
		try
		{
			mCallback = (NoticeDialogListener) activity;
		}
		catch (ClassCastException e)
		{
			throw new ClassCastException(activity.toString() + "NoticeDialogListener interface not implemented");
		}
	}
	
	@Override
	public Dialog onCreateDialog(Bundle savedInstanceState)
	{
		instrument = getArguments().getString(EXTRA_INSTRUMENT);
		AlertDialog.Builder builder = new AlertDialog.Builder(getActivity());
		DialogClickListener listener = new DialogClickListener();

		builder.setMessage("Are you sure you want to enrol in " + instrument + "?")
			.setTitle("Confirm")
			.setNegativeButton("No", listener)
			.setPositiveButton("Yes", listener);
			 
		return builder.create();
	}
	
	private class DialogClickListener implements DialogInterface.OnClickListener
	{
		@Override
		public void onClick(DialogInterface dialog, int which)
		{
			if(which == AlertDialog.BUTTON_NEGATIVE)
			{
				mCallback.onDialogClick(false);
			}
			else
			{
				mCallback.onDialogClick(true);
			}
		}
		
	}

}
